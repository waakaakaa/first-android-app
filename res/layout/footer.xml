<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:widget="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_top_and_bottom"
    android:layout_alignParentBottom="true"
    android:background="@color/nealy_white"
    android:gravity="center">

    <cn.zx.firstapplication.widget.ImageTextButton
        android:id="@+id/itb1"
        widget:img_selected="@drawable/footer_chats_selected"
        widget:img_normal="@drawable/footer_chats"
        widget:text="@string/app_name"
        widget:textColor_selected="@color/green"
        widget:textColor_normal="@color/shadow"
        widget:textSize="@dimen/font_small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <cn.zx.firstapplication.widget.ImageTextButton
        android:id="@+id/itb2"
        widget:img_selected="@drawable/footer_contacts_selected"
        widget:img_normal="@drawable/footer_contacts"
        widget:text="@string/address_list"
        widget:textColor_selected="@color/green"
        widget:textColor_normal="@color/shadow"
        widget:textSize="@dimen/font_small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <cn.zx.firstapplication.widget.ImageTextButton
        android:id="@+id/itb3"
        widget:img_selected="@drawable/footer_explore_selected"
        widget:img_normal="@drawable/footer_explore"
        widget:text="@string/explore"
        widget:textColor_selected="@color/green"
        widget:textColor_normal="@color/shadow"
        widget:textSize="@dimen/font_small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <cn.zx.firstapplication.widget.ImageTextButton
        android:id="@+id/itb4"
        widget:img_selected="@drawable/footer_me_selected"
        widget:img_normal="@drawable/footer_me"
        widget:text="@string/me"
        widget:textColor_selected="@color/green"
        widget:textColor_normal="@color/shadow"
        widget:textSize="@dimen/font_small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1" />
</LinearLayout>

