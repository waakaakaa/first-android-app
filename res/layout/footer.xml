<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ITButton="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_top_and_bottom"
    android:layout_alignParentBottom="true"
    android:background="@color/nealy_white"
    android:gravity="center">

    <cn.zx.firstapplication.widget.ImageTextButton
        android:id="@+id/itb1"
        ITButton:img="@drawable/footer_chats_selected"
        ITButton:text="@string/app_name"
        ITButton:textColor="@color/green"
        ITButton:textSize="@dimen/font_small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <cn.zx.firstapplication.widget.ImageTextButton
        android:id="@+id/itb2"
        ITButton:img="@drawable/footer_contacts"
        ITButton:text="@string/address_list"
        ITButton:textColor="@color/shadow"
        ITButton:textSize="@dimen/font_small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <cn.zx.firstapplication.widget.ImageTextButton
        android:id="@+id/itb3"
        ITButton:img="@drawable/footer_explore"
        ITButton:text="@string/explore"
        ITButton:textColor="@color/shadow"
        ITButton:textSize="@dimen/font_small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <cn.zx.firstapplication.widget.ImageTextButton
        android:id="@+id/itb4"
        ITButton:img="@drawable/footer_me"
        ITButton:text="@string/me"
        ITButton:textColor="@color/shadow"
        ITButton:textSize="@dimen/font_small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1" />
</LinearLayout>

